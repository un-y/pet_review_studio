<div>
  <%= flash[:notice] %>
</div>

<div class="row">
  <div class="col-md-9 mx-auto">
    <h3 class="mt-3">商品レビュー投稿</h3>

    <%= form_with(model: @item_review, url: item_post_item_reviews_path(@item_post)) do |f| %>
      <p style="margin-top: 10px; margin-bottom: 5px;">レビューする商品: <%= @item_post.name %></p>
      
      <p style="margin-top: 10px; margin-bottom: 5px;">評価（1〜5）</p>
      <%= f.number_field :evaluation, in: 1..5 %>

      <p style="margin-top: 10px; margin-bottom: 5px;">レビューコメント</p>
      <%= f.text_area :comment %>

      <div>
        <%= f.submit '投稿', style: "font-size: 14px; padding: 3px 5px;" %>
      </div>
    <% end %>
  </div>
</div>