<div>
  <%= flash[:notice] %>
</div>

<div class="row">
  <div class="col-md-9 mx-auto">
    <h3 class="mt-3">一般ユーザー一覧</h3>

    <table class="table table-hover table-inverse" style="font-size: 12px;">
      <thead>
        <tr>
          <th>名前</th>
          <th>Email</th>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.name %></td>
            <td><%= user.email %></td>
            <td><%= link_to '編集', edit_admin_user_path(user) %></td>
            <td><%= link_to '退会する', deactivate_user_path(user), method: :patch, data: { confirm: '本当に退会しますか？' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
</div>
</div>
</div>