<div>
  <%= flash[:notice] %>
</div>

<div class="row">
  <div class="col-md-9 mx-auto">
    <h3 class="mt-3">ユーザー情報編集</h3>

<%= form_for @user, url: user_path(@user), method: :patch do |f| %>
  <div style="margin-bottom: 10px;">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  
  <div style="margin-bottom: 10px;">
    <%= f.label :email %>
    <%= f.text_field :email %>
  </div>

  #<div>
  #  <%= f.label :profile_image %>
  #  <%= f.file_field :profile_image %>
  #</div>

  <div style="margin-bottom: 10px;">
    <%= f.label :is_active %>
    <%= f.check_box :is_active %>
  </div>

  <div>
    <%= f.submit '更新', style: "font-size: 12px; padding: 2px 4px;" %>
  </div>
<% end %>
</div>
</div>
</div>