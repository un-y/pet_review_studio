<div>
  <%= flash[:notice] %>
</div>

<h1>施設レビュー投稿</h1>

<%= form_with(model: @facility_review, url: facility_post_facility_reviews_path(@facility_post)) do |f| %>
  <p>レビューするお店・施設: <%= @facility_post.name %></p>
  
  <p>評価（1〜5）</p>
  <%= f.number_field :evaluation, in: 1..5 %>

  <p>レビューコメント</p>
  <%= f.text_area :comment %>

  <div>
    <%= f.submit '投稿', class: 'btn btn-success' %>
  </div>
<% end %>