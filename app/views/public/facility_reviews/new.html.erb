<div>
  <%= flash[:notice] %>
</div>

<div class="row">
  <div class="col-md-9 mx-auto">
    <h3 class="mt-3">施設レビュー投稿</h3>

    <%= form_with(model: @facility_review, url: facility_post_facility_reviews_path(@facility_post)) do |f| %>
      <p style="margin-top: 10px; margin-bottom: 5px;">レビューするお店・施設: <%= @facility_post.name %></p>
      
      <p style="margin-top: 10px; margin-bottom: 5px;">評価（1〜5）</p>
      <%= f.number_field :evaluation, in: 1..5 %>

      <p style="margin-top: 10px; margin-bottom: 5px;">レビューコメント</p>
      <%= f.text_area :comment %>

      <div>
        <%= f.submit '投稿', style: "font-size: 14px; padding: 3px 5px;" %>
      </div>
    <% end %>
  </div>
</div>