<%= render 'admin/shared/list', items: @admin_item_genres_path %>

<h1>商品ジャンル一覧</h1>

<%= link_to "追加", new_admin_item_genre_path %>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>ジャンル名</th>
      <th>作成日時</th>
      <th>更新日時</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
  <% @item_genres.each do |item_genre| %>
    <tr>
      <td>
        <%=  item_genre.id %>
      </td>
      <td>
        <% if item_genre %>
          <%= link_to item_genre.name, admin_item_genres_path(item_genre) %>
        <% end %>
      </td>
      <td>
        <p><%= item_genre.created_at.strftime("%Y-%m-%d") %></p>
        <p><%= item_genre.created_at.strftime("%H:%M") %></p>
      </td>
        <td>
        <p><%= item_genre.updated_at.strftime("%Y-%m-%d") %></p>
        <p><%= item_genre.updated_at.strftime("%H:%M") %></p>
      </td>
      <td>
        <% if item_genre %>
          <%= link_to "編集", edit_admin_item_genre_path(item_genre.id) %>
        <% end %>
      </td>
      <td>
        <% if item_genre %>
          <%= link_to "削除", admin_item_genre_path(item_genre), method: :delete, data: { confirm: '本当に削除しますか？' } %>
        <% end %>    
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
  </div>
</div>
</div>
