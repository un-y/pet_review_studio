<%= render 'admin/shared/list', items: @admin_item_genres_path %>

<div>
  <%= flash[:notice] %>
</div>

<div class="col-md-9">
  <h3>商品ジャンル編集</h3>

  <label style="margin-bottom: 10px;">ジャンル名</label>
  <%= form_with model: @item_genre, url: admin_item_genre_path(@item_genre), method: :patch do |f| %>
    <%= f.text_field :name, autofocus: true, id:"name", placeholder:"name" %>

    <div style="margin-top: 10px;">
      <%= f.submit '更新', style: "font-size: 12px; padding: 2px 4px;" %>
    </div>

    <div style="margin-top: 10px;">
      <%= link_to "Back", admin_item_genre_path(@item_genre) %>
    </div>
  <% end %>
</div>
</div>
</div>