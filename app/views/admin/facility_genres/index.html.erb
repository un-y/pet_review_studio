<%= render 'admin/shared/list', items: @admin_facility_genres_path %>

<h1>施設ジャンル一覧</h1>

<%= link_to "追加", new_admin_facility_genre_path %>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>ジャンル名</th>
      <th>作成日時</th>
      <th>更新日時</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
  <% @facility_genres.each do |facility_genre| %>
    <tr>
      <td>
        <%= facility_genre.id %>
      </td>
      <td>
        <% if facility_genre %>
          <%= link_to facility_genre.name, admin_facility_genres_path(facility_genre) %>
        <% end %>
      </td>
      <td>
        <p><%= facility_genre.created_at.strftime("%Y-%m-%d") %></p>
        <p><%= facility_genre.created_at.strftime("%H:%M") %></p>
      </td>
        <td>
        <p><%= facility_genre.updated_at.strftime("%Y-%m-%d") %></p>
        <p><%= facility_genre.updated_at.strftime("%H:%M") %></p>
      </td>
      <td>
        <% if facility_genre %>
          <%= link_to "編集", edit_admin_facility_genre_path(facility_genre.id) %>
        <% end %>
      </td>
      <td>
        <% if facility_genre %>
          <%= link_to "削除", admin_facility_genre_path(facility_genre), method: :delete, data: { confirm: '本当に削除しますか？' } %>
        <% end %>    
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
  </div>
</div>
</div>
