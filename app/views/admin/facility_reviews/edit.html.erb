<%= render 'admin/shared/list', items: @admin_facility_post_facility_review_path %>

<div>
  <%= flash[:notice] %>
</div>

<div class="col-md-9">
  <h3>レビュー編集</h3>

  <%= form_for([@facility_post, @facility_review]) do |facility_review| %>
    <p style="margin-top: 10px; margin-bottom: 5px;">評価</p>
      <%= facility_review.number_field :evaluation, in: 1..5 %>

    <p style="margin-top: 10px; margin-bottom: 5px;">コメント</p>
      <%= facility_review.text_area :comment %> 

    <div>
      <%= facility_review.submit "更新する", style: "font-size: 14px; padding: 3px 5px;" %>
    </div>

  <% end %>
</div>
</div>
</div>